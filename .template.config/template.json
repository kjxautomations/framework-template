{
  "$schema": "http://json.schemastore.org/template",
  "author": "KJX Automations, LLC",
  "classifications": ["Desktop", "C#", "WPF","Instrumentation", "Device Control"],
  "identity": "KJX.ProjectTemplate",
  "groupIdentity": "KJX.ProjectTemplate.Templates",
  "defaultName": "InstrumentationProject",
  "name": "KJX Instrumentation Application Template",
  "description": "A cross-platform template for an internal/customer-facing instrument control application",
  "shortName": "kjxinstrumentation",
  "sourceName": "KJX.ProjectTemplate",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "preferNameDirectory": true,
  "symbols": {
    "EngineeringProject": {
      "type": "parameter",
      "description": "Defines if your solution will include an Engineering facing user interface",
      "datatype": "bool",
      "defaultValue": true
    },
    "ControlSoftwareProject": {
      "type": "parameter",
      "description": "Defines if your solution will include a Control SW user interface",
      "datatype": "bool",
      "defaultValue": true
    },
    "Devices": {
      "type": "parameter",
      "description": "Include simple device implementations, configuration and UI",
      "datatype": "bool",
      "defaultValue": true
    },
    "Tests": {
      "type": "parameter",
      "description": "Include unit test project",
      "datatype": "bool",
      "defaultValue": false
    }
  },
  "primaryOutputs": [
    {
      "path": "KJX.ProjectTemplate.Engineering/KJX.ProjectTemplate.Engineering.csproj"
    },
    {
      "path": "KJX.ProjectTemplate.Control/KJX.ProjectTemplate.Control.csproj"
    },
    {
      "path": "KJX.Devices/KJX.Devices.csproj"
    },
    {
      "path": "KJX.DevicesUI/KJX.DevicesUI.csproj"
    },
    {
      "path": "KJX.Tests/KJX.Tests.csproj"
    }
  ],
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "FirmwareExamples/**",
            "../KJX.Nuget.csproj"
          ]
        },
        {
          "condition": "(!EngineeringProject)",
          "exclude": [
            "KJX.ProjectTemplate.Engineering/**"
          ]
        },
        {
          "condition": "(!ControlSoftwareProject)",
          "exclude": [
            "KJX.ProjectTemplate.Control/**",
            "FirmwareExamples/**/**"
          ]
        },
        {
          "condition": "(!Devices)",
          "exclude": [
            "KJX.Devices/**",
            "KJX.DevicesUI/**"
          ]
        },
        {
          "condition": "(!Tests)",
          "exclude": [
            "KJX.Tests/**"
          ]
        }
      ]
    }
  ],
  "postActions": [
    {
      "description": "Add devices to the project",
      "condition": "(Devices)",
      "applyFileRenamesToArgs": [],
      "manualInstructions": [{
        "text": "Add Devices and DevicesUI projects to solution manually."
      }],
      "args": {
        "inRoot": true,
        "primaryOutputIndexes": 2
      },
      "actionId": "D396686C-DE0E-4DE6-906D-291CD29FC5DE",
      "continueOnError": true
    },
    {
      "description": "Add device UI's to the project",
      "condition": "(Devices)",
      "applyFileRenamesToArgs": [],
      "manualInstructions": [{
        "text": "Add Devices and DevicesUI projects to solution manually."
      }],
      "args": {
        "inRoot": true,
        "primaryOutputIndexes": 3
      },
      "actionId": "D396686C-DE0E-4DE6-906D-291CD29FC5DE",
      "continueOnError": true
    },
    {
      "description": "Add projects to solution",
      "condition": "(EngineeringProject)",
      "applyFileRenamesToArgs": [],
      "manualInstructions": [{
        "text": "Add engineering project to solution manually."
      }
      ],
      "args": {
        "inRoot": true,
        "primaryOutputIndexes": 0
      },
      "actionId": "D396686C-DE0E-4DE6-906D-291CD29FC5DE",
      "continueOnError": true
    },
    {
      "description": "Adding KJX.Devices to Engineering Project",
      "condition": "(EngineeringProject && Devices)",
      "manualInstructions": [{
        "text": "Add the reference to KJX.Devices to Engineering manually."
      }],
      "args": {
        "targetFiles": ["*.Engineering.csproj"],
        "referenceType": "project",
        "reference": "KJX.Devices/KJX.Devices.csproj"
      },
      "actionId": "B17581D1-C5C9-4489-8F0A-004BE667B814",
      "continueOnError": true
    },
    {
      "description": "Adding a reference to another project",
      "condition": "(EngineeringProject && Devices)",
      "manualInstructions": [{
        "text": "Add the reference to KJX.DevicesUI to Engineering manually."
      }],
      "args": {
        "targetFiles": ["*.Engineering.csproj"],
        "referenceType": "project",
        "reference": "KJX.DevicesUI/KJX.DevicesUI.csproj"
      },
      "actionId": "B17581D1-C5C9-4489-8F0A-004BE667B814",
      "continueOnError": true
    },
    {
      "description": "Add control software project to solution",
      "condition": "(ControlSoftwareProject)",
      "applyFileRenamesToArgs": [],
      "manualInstructions": [{
        "text": "Add control software project to solution manually."
      }],
      "args": {
        "inRoot": true,
        "primaryOutputIndexes": 1
      },
      "actionId": "D396686C-DE0E-4DE6-906D-291CD29FC5DE",
      "continueOnError": true
    },
    {
      "description": "Add KJX.Devices to Control project",
      "condition": "(ControlSoftwareProject && Devices)",
      "manualInstructions": [{
        "text": "Add the the reference to KJX.Devices to Control project manually."
      }],
      "args": {
        "targetFiles": ["*.Control.csproj"],
        "referenceType": "project",
        "reference": "KJX.Devices/KJX.Devices.csproj"
      },
      "actionId": "B17581D1-C5C9-4489-8F0A-004BE667B814",
      "continueOnError": true
    },
    {
      "description": "Add unit test project to solution",
      "condition": "(Tests)",
      "applyFileRenamesToArgs": [],
      "manualInstructions": [{
        "text": "Add control software project to solution manually."
      }],
      "args": {
        "inRoot": true,
        "primaryOutputIndexes": 4
      },
      "actionId": "D396686C-DE0E-4DE6-906D-291CD29FC5DE",
      "continueOnError": true
    },
    {
      "description": "Add KJX.Devices to Control project",
      "condition": "(Tests)",
      "manualInstructions": [{
        "text": "Add the the reference to KJX.Devices to Control project manually."
      }],
      "args": {
        "targetFiles": ["*.Tests.csproj"],
        "referenceType": "project",
        "reference": "KJX.Devices/KJX.Devices.csproj"
      },
      "actionId": "B17581D1-C5C9-4489-8F0A-004BE667B814",
      "continueOnError": true
    }
  ]
}